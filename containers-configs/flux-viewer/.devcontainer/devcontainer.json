{
	"name": "flux-viewer",
	"dockerComposeFile": "${localWorkspaceFolder}/../../compose/flux-viewer.yaml",
	"service": "flux-viewer",
	"features": {
		// "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
		// 	"omzPlugins": "https://github.com/zsh-users/zsh-autosuggestions https://github.com/zsh-users/zsh-syntax-highlighting.git",
		// 	"plugins": "z zsh-autosuggestions zsh-syntax-highlighting"
		// },
		// "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
		// "ghcr.io/nils-geistmann/devcontainers-features/zsh:0": {},
		"ghcr.io/devcontainers/features/common-utils:2": {
			"configureZshAsDefaultShell": true,
			"username": "${localEnv:USER}"
		},
    "ghcr.io/cirolosapio/devcontainers-features/alpine-ohmyzsh:0": {
			"plugins": "z zsh-autosuggestions zsh-syntax-highlighting"
    }
	},
	"mounts": [
    "source=/home/fred-bd/.kube/config,target=/home/${localEnv:USER}/.kube/config,type=bind,consistency=cached",
    "source=projects,target=/home/${localEnv:USER}/projects,type=volume,consistency=cached"
	],
	"workspaceFolder": "/home/${localEnv:USER}/projects",
	"containerUser": "${localEnv:USER}",
	"remoteUser": "${localEnv:USER}",
	"customizations": {
		"vscode": {
			"extensions": [
				"github.copilot",
        "ciandt-global.ciandt-flow",
        "weaveworks.vscode-gitops-tools",
        "ms-kubernetes-tools.vscode-kubernetes-tools"
			]
		}
	},
	"postCreateCommand": "sh -c /home/${localEnv:USER}/projects/postCreate.sh",
	// "postStartCommand": "chmod +x /home/${localEnv:USER}/postStart.sh && sh -c /home/${localEnv:USER}/postStart.sh"
}